# ====================================
# 数据库配置
# ====================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=tattoo_db

# ====================================
# MinIO 对象存储配置
# ====================================
# MinIO服务器端点地址
MINIO_ENDPOINT=http://117.72.222.222:9100
# MinIO访问密钥ID
MINIO_ACCESS_KEY_ID=root
# MinIO访问密钥密码
MINIO_SECRET_ACCESS_KEY=Hongyu_1022
# MinIO存储桶名称
MINIO_BUCKET_NAME=tattoo
# 是否使用SSL连接MinIO (true/false)
MINIO_USE_SSL=false
# MinIO区域设置
MINIO_REGION=us-east-1
# 生成图片保存目录
GENERATED_IMAGES_DIR=site
# ====================================
# 服务器配置
# ====================================
# 服务器端口
PORT=3009
# 运行环境 (development/productiontest)
NODE_ENV=development
# ====================================
# AI API密钥配置
# ====================================
# DeepSeek API密钥
DEEPSEEK_API_KEY=you_deepseek_key_here
# ====================================
# 调试和日志配置
# ====================================
# 是否启用调试模式 (true/false)
DEBUG_MODE=false

# 是否启用详细日志 (true/false)
VERBOSE_LOGGING=false

# 日志级别 (error/warn/info/debug)
LOG_LEVEL=info

# REPLICATE图片生成API配置（需要申请真实的Token）
REPLICATE_API_TOKEN=your_real_kieai_token_here

# ====================================
# Creem支付配置 - 基于真实的 Creem API
# ====================================
# 获取这些配置请访问 Creem 控制台：https://creem.io/dashboard

# Creem API密钥（必需）
# 在 Creem 控制台的 API Keys 页面获取
CREEM_API_KEY=your_creem_api_key_here

# Creem Webhook密钥（可选，用于验证 webhook 签名）
# 在 Creem 控制台的 Webhooks 页面获取
CREEM_WEBHOOK_SECRET=your_webhook_secret_here

# Creem 产品 ID 配置
# 需要在 Creem 控制台的 Products 页面预先创建产品，然后复制产品 ID
CREEM_PRODUCT_ID_7DAY=prod_your_7day_product_id
CREEM_PRODUCT_ID_14DAY=prod_your_14day_product_id
CREEM_PRODUCT_ID_30DAY=prod_your_30day_product_id

# Creem回调URL配置
# 注意：这些URL需要与你的域名匹配，并且必须使用HTTPS
CREEM_SUCCESS_URL=https://aitattoo.art/payment/creem/callback?status=success
CREEM_CANCEL_URL=https://aitattoo.art/payment/creem/callback?status=cancelled

# Creem Webhook URL
# 注意：这个URL需要在Creem控制台中配置
CREEM_WEBHOOK_URL=https://aitattoo.art/api/webhooks/creem

# ====================================
# JWT认证配置
# ====================================
# JWT密钥（用于生成和验证令牌）
JWT_SECRET=your_jwt_secret_key
# JWT过期时间
JWT_EXPIRES_IN=7d

# ====================================
# Google OAuth配置
# ====================================
# Google OAuth客户端ID
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID